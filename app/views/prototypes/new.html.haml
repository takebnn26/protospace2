.container.proto-new
  .col-md-8.col-md-offset-2
    = form_for @prototype do |f|
      - if @prototype.errors.any?
        .explain_errors
          %h2= "#{@prototype.errors.count} errors"
          %ul
          - @prototype.errors.full_messages.each do |error|
            %li #{error}
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, placeholder: "Title", class:"proto-new-title"
      .row
        .col-md-12
          .cover-image-upload
            = f.fields_for :images do |img|
              = img.file_field :content, id: "js-file-input0"
              = image_tag (""),id: "js-preview0", class: "image-preview"
              = img.hidden_field :content_type, value: :main
        .col-md-12
          %ul.proto-sub-list.list-group
            - 2.times do |i|
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :images do |img|
                    = img.file_field :content, id: "js-file-input#{ i + 1 }"
                    = image_tag (""), id: "js-preview#{ i + 1}", class: "image-preview"
                    = img.hidden_field :content_type, value: :sub
            %li.list-group-item.col-md-4
              .image-upload.hidden
                = f.fields_for :images do |img|
                  = img.file_field :content, id: "js-file-input3"
                  = image_tag (""), id: "js-preview3", class: "image-preview"
                  = img.hidden_field :content_type, value: :sub
              .image-upload-plus
                %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
        .col-md-12
          %h4 Tag List
          .row
            - 3.times do
              .col-md-3
                = text_field_tag 'prototype[tag_list][]', "", placeholder: "Tag"
      .row.text-center.proto-btn
        = f.submit "Publish", class: "btn btn-lg btn-primary btn-block"
