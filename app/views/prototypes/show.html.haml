.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          %a{href: "#"}
          = link_to user_path(@prototype.user) do
            %img.media-object{alt: "64x64", data: { holder: {rendered: true}}, data: { src: "holder.js/64x64"}, src: "#{@prototype.user.image}", style: "width: 64px; height: 64px;"}
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            = link_to "by #{@prototype.user.name}", user_path(@prototype.user)
            %span.degree
              = @prototype.user.works
    .col-md-6.clearfix
      #like-buttons
        = render partial: 'like', locals: { prototype: @prototype, likes: @likes, like: @like }
  .row
    .col-md-9
      = image_tag(@prototype.images.main.first.content, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.images.sub.each do |sub_image|
          %li.list-group-item
            = image_tag(sub_image.content, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p= @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p= @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num= @prototype.comments.length
    .col-md-8
      - @prototype.comments.each do |comment|
        .media
          .media-left
            = link_to user_path(comment.user) do
              %img.media-object{alt: "64x64", data: { holder: { rendered: true }}, data: { src: "holder.js/64x64"}, src: "#{comment.user.image}", style: "width: 64px; height: 64px;"}
          .media-body
            %h4#top-aligned-media.media-heading
              = comment.user.name
              %a.anchorjs-link{href: "#top-aligned-media"}
                %span.anchorjs-icon
            %p= comment.text
