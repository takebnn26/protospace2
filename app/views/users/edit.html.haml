.container.user-new
  = form_for(@user) do |f|
    - if @user.errors.any?
      .explain_errors
        %h2= "#{@user.errors.count} errors"
        %ul
        - @user.errors.full_messages.each do |error|
          %li #{error}
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, placeholder: "Username", value: "#{@user.name}"
            .user-image.col-md-2{style: 'background-image: url(<%= @user.image %>);'}
              %button.btn.btn-primary Change image
              = f.file_field :image
          = f.email_field :email, placeholder: "E-Mail", value: " #{@user.email}", class: "user-email"
          = f.password_field :password, placeholder: "Password", class: "user-password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :group, placeholder: "Member", value: "#{@user.group}"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: 30, rows: 4, placeholder: "Profile", value: "#{@user.profile}"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :works, cols: 30, rows: 4, placeholder: "Works", value: "#{@user.works}"
    .row.text-center.user-btn
      = f.submit "SAVE", class: "btn btn-lg btn-primary btn-block"
